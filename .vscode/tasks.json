{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run example",
			"type": "shell",
			"command": "cargo run --example example",
			"problemMatcher": "$rustc",
			"dependsOn": ["Run tests"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Run tests",
			"type": "shell",
			"command": "cargo test",
			"problemMatcher": "$rustc"
		}
	]
}
